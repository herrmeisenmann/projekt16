
@*Created by Niklas Grieger on 27.09.2016.
    Page /ClientAccount/Register*@
 
@{
    ViewBag.Title = "Registrieren";
}

<h2>@ViewBag.Title.</h2>
    <h4>Neuer Schüler</h4>

    <div class="form-group">
        <lable class="col-md-2 control-label" for="regist_username">Username: </lable>
        <div class="col-md-10">
            <input class="k-textbox" id="regist_username" />
        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label" for="regist_firstname">Vorname: </lable>
        <div class="col-md-10">
            <input class="k-textbox" id="regist_fistname" />
        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label" for="regist_lastname">Nachname: </lable>
        <div class="col-md-10">
            <input class="k-textbox" id="regist_lastname" />
        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label" for="regist_password">Password: </lable>
        <div class="col-md-10">
            <input class="k-textbox" id="regist_password" />
        </div>
    </div>
    <div class="form-group">
        <lable class="col-md-2 control-label" for="drp_berufDropDown">Beruf: </lable>
        <div class="col-md-10">
            <div id="drp_berufDropDown"></div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="drp_klassenDropDown">Klasse: </label>
        <div class="col-md-10">
            <div id="drp_klassenDropDown"></div>
        </div>
    </div><br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input onclick="saveUser()" type="submit" id="regist_submit" class="btn btn-default" value="Registrieren" />
        </div>
    </div>
    Anmelden <a href="/ClientAccount/Login">Hier</a>
